{
  "name": "@good/api",
  "version": "0.0.1",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "build": "vite build",
    "codegen": "prisma generate --schema ./src/db/schema.prisma",
    "cron": "NODE_ENV=production tsx src/cron/index.ts",
    "dev": "nodemon -w src -x tsx src/server.ts",
    "postinstall": "pnpm codegen",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --fix --ext .js,.ts,.tsx",
    "prettier": "prettier --check \"**/*.{js,ts,tsx,md}\"  --cache",
    "prettier:fix": "prettier --write \"**/*.{js,ts,tsx,md}\"  --cache",
    "prisma:clean": "prisma migrate reset --schema ./src/db/schema.prisma",
    "prisma:format": "prisma format --schema ./src/db/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ./src/db/schema.prisma",
    "prisma:seed": "ts-node ./src/db/seed.ts",
    "start": "NODE_ENV=production tsx src/server.ts",
    "test:dev": "vitest run",
    "typecheck": "tsc --pretty"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.588.0",
    "@aws-sdk/client-sts": "^3.588.0",
    "@clickhouse/client": "^1.0.2",
    "@good/abis": "workspace:*",
    "@good/data": "workspace:*",
    "@good/helpers": "workspace:*",
    "@irys/sdk": "^0.2.1",
    "@lens-protocol/metadata": "^1.2.0",
    "@prisma/client": "^5.14.0",
    "@sentry/node": "^8.7.0",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-file-routing": "^3.0.3",
    "express-session": "^1.18.0",
    "fast-xml-parser": "^4.4.0",
    "linkedom": "^0.18.2",
    "node-cron": "^3.0.3",
    "pg-promise": "^11.8.0",
    "request-ip": "^3.3.0",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "ua-parser-js": "^1.0.38",
    "urlcat": "^3.1.0",
    "uuid": "^9.0.1",
    "viem": "^2.13.3",
    "vite-express": "^0.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@good/config": "workspace:*",
    "@good/types": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.15",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.13.0",
    "@types/node-cron": "^3.0.11",
    "@types/request-ip": "^0.0.41",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^9.0.8",
    "nodemon": "^3.1.2",
    "prisma": "^5.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2",
    "vite": "^5.2.12",
    "vitest": "^1.6.0"
  }
}
